<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="48dp"
    android:layout_width="match_parent"
    android:background="@drawable/list_selector">

    <TextView
        android:id="@+id/tvStation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:gravity="center_vertical"
        android:paddingRight="40dp"
        android:paddingLeft="20dp"
        android:text="Station Name Goes here"/>


    <ImageView
        android:id="@+id/ivLineColor"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_centerVertical="true"
        android:background="#000000"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/ivLineColor2"
        android:background="#000000"
        android:layout_marginRight="2dp"
        android:layout_alignTop="@+id/ivLineColor"
        android:layout_toLeftOf="@+id/ivLineColor"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/ivLineColor3"
        android:background="#000000"
        android:layout_marginRight="2dp"
        android:layout_alignTop="@+id/ivLineColor"
        android:layout_toLeftOf="@+id/ivLineColor2"
        android:visibility="invisible"/>

</RelativeLayout>